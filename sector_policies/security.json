{
  "sector_id": "security",
  "sector_name": "Global Security & Access Control",
  "version": "1.0.0",
  "description": "Policy pack for secure communications, identity verification, access control, and multi-party coordination. Wavelength-encoded identity provides physics-based authentication.",

  "band_mappings": {
    "PLANCK": {
      "authority_label": "Treaty & Kill-Switch",
      "operations": ["system_termination", "treaty_ratification", "sovereignty_transfer", "constitutional_amendment"],
      "min_energy_escrow_nxt": 100000,
      "multi_party_required": true,
      "quorum_percent": 90
    },
    "YOCTO": {
      "authority_label": "Rules of Engagement",
      "operations": ["roe_modification", "clearance_level_change", "threat_level_declaration"],
      "min_energy_escrow_nxt": 10000,
      "multi_party_required": true,
      "quorum_percent": 75
    },
    "ZEPTO": {
      "authority_label": "Access Control",
      "operations": ["access_grant", "access_revoke", "zone_classification", "personnel_clearance"],
      "min_energy_escrow_nxt": 1000,
      "multi_party_required": true,
      "quorum_percent": 67
    },
    "ATTO": {
      "authority_label": "Live Command & Control",
      "operations": ["real_time_coordination", "asset_deployment", "situation_update", "alert_broadcast"],
      "min_energy_escrow_nxt": 100,
      "multi_party_required": false,
      "quorum_percent": 0
    },
    "FEMTO": {
      "authority_label": "Routine Communications",
      "operations": ["secure_message", "status_report", "checkpoint_verification"],
      "min_energy_escrow_nxt": 10,
      "multi_party_required": false,
      "quorum_percent": 0
    },
    "PICO": {
      "authority_label": "Monitoring & Logs",
      "operations": ["audit_log", "surveillance_data", "access_log_query"],
      "min_energy_escrow_nxt": 1,
      "multi_party_required": false,
      "quorum_percent": 0
    },
    "NANO": {
      "authority_label": "Sensor & Telemetry",
      "operations": ["sensor_ping", "heartbeat", "location_update"],
      "min_energy_escrow_nxt": 0.1,
      "multi_party_required": false,
      "quorum_percent": 0
    }
  },

  "operations": [
    {
      "operation_id": "security.authenticate",
      "name": "Identity Authentication",
      "description": "Wavelength-encoded identity verification",
      "required_band": "FEMTO",
      "energy_cost_multiplier": 1.0,
      "attestations_required": ["spectral_signature"],
      "reversible": false,
      "audit_trail": true
    },
    {
      "operation_id": "security.authorize",
      "name": "Access Authorization",
      "description": "Grant or deny access based on clearance and zone",
      "required_band": "ZEPTO",
      "energy_cost_multiplier": 1.5,
      "attestations_required": ["identity_proof", "clearance_level", "zone_permission"],
      "reversible": true,
      "audit_trail": true
    },
    {
      "operation_id": "security.communicate",
      "name": "Secure Communication",
      "description": "Tamper-evident message transmission",
      "required_band": "FEMTO",
      "energy_cost_multiplier": 1.0,
      "attestations_required": ["sender_signature", "recipient_key"],
      "reversible": false,
      "audit_trail": true
    },
    {
      "operation_id": "security.alert",
      "name": "Threat Alert",
      "description": "Broadcast security alert to relevant parties",
      "required_band": "ATTO",
      "energy_cost_multiplier": 5.0,
      "attestations_required": ["threat_assessment", "authority_signature"],
      "reversible": false,
      "audit_trail": true
    },
    {
      "operation_id": "security.coordinate",
      "name": "Multi-Party Coordination",
      "description": "Consensus-based decision across multiple authorities",
      "required_band": "ATTO",
      "energy_cost_multiplier": 3.0,
      "attestations_required": ["participant_signatures"],
      "reversible": false,
      "audit_trail": true
    },
    {
      "operation_id": "security.escalate",
      "name": "Threat Escalation",
      "description": "Elevate threat level with multi-party consensus",
      "required_band": "YOCTO",
      "energy_cost_multiplier": 10.0,
      "attestations_required": ["threat_evidence", "multi_authority_consensus"],
      "reversible": true,
      "audit_trail": true
    },
    {
      "operation_id": "security.treaty",
      "name": "Treaty Action",
      "description": "Execute treaty-level agreement or action",
      "required_band": "PLANCK",
      "energy_cost_multiplier": 100.0,
      "attestations_required": ["treaty_document", "sovereign_signatures", "constitutional_compliance"],
      "reversible": false,
      "audit_trail": true
    }
  ],

  "constraints": {
    "max_dominance_percent": 5,
    "bhls_applicable": true,
    "confined_dominance_allowed": false,
    "audit_level": "PICO",
    "identity_verification": "wavelength_signature",
    "message_integrity": "lambda_hash",
    "multi_party_threshold": 3
  },

  "attestations": [
    {
      "type": "spectral_signature",
      "required_for": ["security.authenticate"],
      "minimum_band": "FEMTO",
      "description": "Unique wavelength-encoded identity"
    },
    {
      "type": "clearance_level",
      "required_for": ["security.authorize", "security.escalate"],
      "minimum_band": "ZEPTO",
      "description": "Verified security clearance"
    },
    {
      "type": "zone_permission",
      "required_for": ["security.authorize"],
      "minimum_band": "ZEPTO",
      "description": "Zone-specific access rights"
    },
    {
      "type": "threat_assessment",
      "required_for": ["security.alert", "security.escalate"],
      "minimum_band": "ATTO",
      "description": "Documented threat analysis"
    },
    {
      "type": "sovereign_signatures",
      "required_for": ["security.treaty"],
      "minimum_band": "PLANCK",
      "description": "Authorized sovereign entity signatures"
    }
  ],

  "physics_rules": {
    "identity_encoding": "λ_identity = wavelength_signature(public_key, frequency_band)",
    "message_integrity": "hash = Λ_signature(message_content)",
    "tamper_detection": "Δλ > threshold triggers ATTO-level alert",
    "non_repudiation": "All operations carry Lambda mass proof"
  }
}
